package q.thread.chat;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;

public class ClientReveive implements Runnable{
	private Socket socket;
	
	public ClientReveive(Socket socket) {
		super();
		this.socket = socket;
	}

	@Override
	public void run() {
		try (BufferedReader br = new BufferedReader(new InputStreamReader(socket.getInputStream()));){
			// 출력용 스트림
			PrintWriter pw = new PrintWriter(socket.getOutputStream());
			
			while(true) {
				System.out.print("서버에게 보낼 내용 : ");
				String sendMessage = sc.nextLine();
				pw.println(sendMessage);	// 입력받은 내용 스트림에 담기
				pw.flush();		// 스트림에 담겨있는 내용을 강제로 보냄
				
				String message = br.readLine();
				System.out.println("서버로부터 전달받은 메시지 : " + message);
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
