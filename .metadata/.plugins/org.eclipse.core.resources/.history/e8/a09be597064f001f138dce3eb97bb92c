package test.t240731.object1;

import java.util.ArrayList;
import java.util.HashMap;

public class FarmController {
	private HashMap<Farm, Integer> hMap = new HashMap<>();
	private ArrayList<Farm> list = new ArrayList<>();
	
	public boolean addNewKind(Farm f, int amount) {
		if(hMap.containsKey(f)) { // f라는 키로 데이터가 존재한다면 -> 추가 불가
			return false;
		} else { // 추가 가능
			hMap.put(f, amount);
			return true;
		}
	}
	
	public boolean removeKind(Farm f) {
		if(hMap.containsKey(f)) {
			hMap.remove(f);
			return true;
		} else {
			return false;
		}
	}
	
	public boolean changeAmount(Farm f, int amount) {
		if(hMap.containsKey(f)) {
			hMap.put(f, amount);	// hMap.replace(f, amount);
			return true;
		} else {
			return false;
		}
	}
	
	public HashMap<Farm, Integer> printFarm() {
		return this.hMap;
	}
	
	public boolean buyFarm(Farm f) {
		if(hMap.containsKey(f)) {
			if(list.add(f)) {
				System.out.println("구매에 성공하였습니다.");
				return true;
			}
			return false;
		} else {
			return false;
		}
	}
	
	public boolean removeFarm(Farm f) {
		if(hMap.containsKey(f)) {
			if(list.remove(f)) {
				System.out.println("구매취소에 성공하였습니다.");
				return true;
			}
			return false;
		} else {
			return false;
		}
	}
	
	public ArrayList<Farm> printBuyFarm() {
		return list;
	}
}
