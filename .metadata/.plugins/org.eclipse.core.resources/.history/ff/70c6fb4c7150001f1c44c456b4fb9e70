package Practice.a08;

import java.util.Scanner;

public class Circle {
	public void count() {
		Scanner sc = new Scanner(System.in);
		
		while(true) {
			System.out.print("문자열 입력 : ");
			String str =sc.nextLine();
			
			if(str.equals("exit")) {
				break;
			} else {
				System.out.println(str.length());
			}
		}
		System.out.println("프로그램 종료");
	}
}
